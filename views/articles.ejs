<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <title>Список статей</title>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Научный Журнал</a>
      <a class="btn btn-outline-light ms-auto" href="/">← Назад</a>
    </div>
  </nav>

  <div class="container mt-5">
    <h2 class="mb-4 fw-bold">Список статей</h2>

    <form action="/articles" method="GET" class="mb-4">
        <div class="input-group">
            <% const currentSearch = typeof searchQuery !== 'undefined' ? searchQuery : '' %>
            <input type="text" name="search" class="form-control" placeholder="Название статьи" value="<%= currentSearch %>">
            <button class="btn btn-primary" type="submit">Поиск</button>
        </div>
    </form>

    <% if (articles.length === 0) { %>
      <p class="text-muted">По данному запросу не найдено ни одной статьи</p>
    <% } else { %>
      <% articles.forEach((article, index) => { %>
        <div class="card article-card shadow-sm">
          <div class="card-body">
            <h5 class="card-title fw-bold mb-3"><%= index + 1 %>. <%= article.title %></h5>
            <div class="card-subtitle mb-1">
              <b>Авторы:</b> <%= article.authors.join(', ') %><br/>
              <b>Дата публикации:</b> <%= article.datePublished.toISOString().split('T')[0] %>
              <div class="card-text mb-3">
                <%= article.content.substring(0, 200) %>
            </div>
            </div>
            <div class="mb-2">
              <% article.tags.forEach(tag => { %>
                <span class="badge bg-primary me-1"><%= tag %></span>
              <% }) %>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>